@model MoodTubeOriginal.Models.Singer

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Singer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SingerName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SingerName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Songs)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Song Name</th>
                    <th>Mood</th>
                </tr>
                @foreach (var item in Model.Songs)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SongName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mood.MoodName)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.SingerID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
